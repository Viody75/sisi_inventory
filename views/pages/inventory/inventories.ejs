<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Inventories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">

    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table-inv').DataTable();
        });
    </script>

</head>

<body class="container" style="margin-top: 50px;">

    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert">
            <%- messages.success %>
        </div>
        <% } %>

            <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%- messages.error %>
                </div>
                <% } %>

                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-pills w-100">
                                <li class="nav-pill active">
                                    <a class="nav-link">Inventories</a>
                                </li>
                                <li class="nav-pill ml-auto">
                                    <a class="nav-link active" href="/inventories/add">Add Inventory</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <table id="table-inv" class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Id-User</th>
                                        <th scope="col">Nama</th>
                                        <th scope="col">Jumlah</th>
                                        <th scope="col">Foto</th>
                                        <th width="200px">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(data.length) { %>
                                        <% for(var i=0; i< data.length; i++) { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= (i+1) %>
                                                </th>
                                                <td>
                                                    <%= data[i].user_id%>
                                                </td>
                                                <td>
                                                    <%= data[i].inv_name%>
                                                </td>
                                                <td>
                                                    <%= data[i].inv_qty%>
                                                </td>
                                                <td>
                                                    <img src="http://localhost:7575/<%=data[i].inv_img_url%>"
                                                        width="100" height="100" alt="" srcset="">
                                                </td>
                                                <td>
                                                    <a class="btn btn-success edit"
                                                        href="../inventories/edit/<%=data[i].id%>">Edit</a>
                                                    <a class="btn btn-danger delete"
                                                        onclick="return alert('Are You sure?')"
                                                        href="../inventories/delete/<%=data[i].id%>">Delete</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                                <% } %>
                                </tbody>
                            </table>


                            <!-- if result is empty -->
                            <% if(!data.length) { %>
                                <p class="text-center">No Inventory found!</p>
                                <% } %>

                        </div>
                    </div>



</body>

</html>
